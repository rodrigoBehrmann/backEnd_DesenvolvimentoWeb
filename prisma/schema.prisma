// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id  String @id @default(uuid())
  nome  String
  matricula   String @unique
  cpf   String
  aluno    Curso?    @relation(fields: [alunoId], references: [id])
  alunoId  String
  login   String @unique
  senha   String
  createdAt   DateTime  @default(now()) @db.Timestamptz(3)
  updatedAt   DateTime  @updatedAt @db.Timestamptz(3)
  deletedAt   DateTime?

  @@map("usuarios")//Nome da tabela
}

model Curso {
  id  String @id @default(uuid())
  nome  String
  codigo String  
  disciplinas Disciplina[]
  alunos Usuario[]
  @@map("cursos")//Nome da tabela
}

model Disciplina {
  id  String @id @default(uuid())
  nome String
  carga_horaria String
  disciplina    Curso?    @relation(fields: [disciplinaId], references: [id])
  disciplinaId  String

  @@map("disciplinas")//Nome da tabela
}

model Resultado {
  id  String @id @default(uuid())
  nota String
  resultado String

  @@map("resultados")//Nome da tabela
}
